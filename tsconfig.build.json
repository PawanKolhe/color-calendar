{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/index.ts",
    "src/types.ts",
    "src/modules/**/*.ts",
    "src/react/**/*.ts",
    "src/react/**/*.tsx"
  ],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/testHelper.ts"]
}
